<div class="card">
  <h5 class="card-header">Log In</h5>
  <div class="card-body">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <label for="email">Email</label>
        <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Enter Email", autofocus: true %>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password", autocomplete: "new-password" %>
      </div>
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
