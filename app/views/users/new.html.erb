<%= render 'shared/errors', obj: @user %>

<div class="card">
  <h5 class="card-header">Sign Up</h5>
  <div class="card-body">
    <%= form_for(@user) do |f| %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="firstName">First Name</label>
          <%= f.text_field :first_name, class: "form-control", id: "firstName", placeholder: "First Name" %>
        </div>
        <div class="form-group col-md-6">
          <label for="lastName">Last Name</label>
          <%= f.text_field :last_name, class: "form-control", id: "lastName", placeholder: "Last Name" %>
        </div>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Email", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password", autocomplete: "new-password" %>
      </div>
      <%= f.submit("Sign up", class: "btn btn-primary") %>
    <% end %>
  </div>
</div>
